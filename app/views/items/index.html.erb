<h1>Listing items</h1>

<div class="item-list">
  <% @items.each do |item|  %>
  <ul class="item-box">
  <%= link_to item do  %>
      <span class="icon-lol">
        <span style="background:url(<%= item.image.url %>)"></span>
      </span>
      </ul>
  <% end  %>
  
<% end  %>
</div>
<table>
  <thead>
    <tr>
    <th> Imagen</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
      <td><%= image_tag item.image.url  %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><%= link_to "Mostrar", item, rel: "tooltip", title: "#{render 'info', item: item}" %>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
