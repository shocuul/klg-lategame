<%= form_for(@item) do |f| %>
 <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
  <%= f.label :image  %>
  <%= f.file_field :image %>
  <p class="help-block"> Inserte la imagen del item </p>

  </div>

    <%= f.submit %>
 
<% end %>
